<v-card-title class="d-flex justify-center align-center text-h4 white--text">
  Sign Up
</v-card-title>

<v-card-text class="white--text">
  Complete the form to register
</v-card-text>

<v-form action="/userSignup" method="POST">
  <v-text-field solo-inverted flat dense prepend-inner-icon="mdi-account" color="deep-purple accent-4" name="name"
    placeholder="Name" required>
  </v-text-field>

  <v-text-field solo-inverted flat dense prepend-inner-icon="mdi-email-variant" color="deep-purple accent-4"
    name="email" placeholder="Email" type="email" required>
  </v-text-field>

  <v-text-field solo-inverted flat dense prepend-inner-icon="mdi-lock" color="deep-purple accent-4" name="password"
    placeholder="password" :append-icon="showSignupPassword ? 'mdi-eye' : 'mdi-eye-off'"
    :type="showSignupPassword ? 'text' : 'password'" @click:append="showSignupPassword = !showSignupPassword" required>
  </v-text-field>

  <div class="d-flex justify-space-between align-center mb-6">
    <a class="text-decoration-none indigo--text text--accent-3 text-caption" href="/">Already have an account?</a>
  </div>

  <v-row justify="space-between" align="center">
    <v-col cols="12" sm="7">
      <v-btn block dark depressed type="submit" color="deep-purple accent-4">
        Sign up
      </v-btn>
    </v-col>
    <v-col cols="12" sm="5">
      <v-btn href="/auth/google" dark depressed block color="red" class="text-capitalize">
        <v-icon left>mdi-google</v-icon>
        Google
      </v-btn>
    </v-col>
  </v-row>
</v-form>