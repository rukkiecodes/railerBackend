<v-navigation-drawer v-model="drawer" color="deep-purple accent-4" permanent expand-on-hover app>
  <v-list-item class="px-1">
    <v-list-item-avatar size="50">
      <v-img src="/images/logoLight.png" />
    </v-list-item-avatar>

    <v-list-item-content>
      <v-list-item-title class="text-h6">Railer</v-list-item-title>
    </v-list-item-content>
  </v-list-item>

  <v-list dense>
    <v-list-item v-for="(route, i) in routes" :key="i" :class="{'deep-purple lighten-1': route.to == route.location}"
      :href="route.to" link>
      <v-list-item-icon>
        <v-icon>\{{route.icon}}</v-icon>
      </v-list-item-icon>

      <v-list-item-content>
        <v-list-item-title class="text-body-2">\{{route.title}}</v-list-item-title>
      </v-list-item-content>
    </v-list-item>
  </v-list>

  <template v-slot:append>
    <v-list dense>
      <v-list-item href="/" link>
        <v-list-item-icon>
          <v-icon>mdi-logout</v-icon>
        </v-list-item-icon>

        <v-list-item-content>
          <v-list-item-title class="text-body-2">Logout</v-list-item-title>
        </v-list-item-content>
      </v-list-item>
    </v-list>
  </template>
</v-navigation-drawer>