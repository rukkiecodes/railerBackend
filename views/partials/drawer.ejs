<v-navigation-drawer v-model="drawer" color="#1E2023" :mini-variant="drawerMiniVariant" app>
  <v-list dense>
    <v-list-item class="ml-n2 mt-n3">
      <v-list-item-avatar size="45">
        <v-img src="/images/logoDark.png"></v-img>
      </v-list-item-avatar>
    </v-list-item>
  </v-list>
  <v-list dense flat>
    <v-tooltip v-for="(route, i) in routes" :key="i" right>
      <template v-slot:activator="{ on, attrs }">
        <v-list-item dense v-bind="attrs" v-on="on" :href="route.to"
          :class="{'deep-purple lighten-1 rounded-lg mx-2 pl-2': route.to == route.location}" link>
          <v-list-item-icon>
            <v-icon>{{ route.icon }}</v-icon>
          </v-list-item-icon>

          <v-list-item-content>
            <v-list-item-title v-text="route.title" />
          </v-list-item-content>
        </v-list-item>
      </template>
      <span v-text="route.title" />
    </v-tooltip>
  </v-list>
</v-navigation-drawer>