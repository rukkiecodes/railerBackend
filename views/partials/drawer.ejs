<v-navigation-drawer v-model="drawer" color="#1E2023" :mini-variant="drawerMiniVariant" app>
  <v-list dense>
    <v-list-item class="ml-n2 mt-n3">
      <v-list-item-avatar size="45">
        <v-img src="/images/logoDark.png"></v-img>
      </v-list-item-avatar>
    </v-list-item>
  </v-list>
  <v-list dense flat>
    <v-tooltip v-for="(route, i) in routes" :key="i" right>
      <template v-slot:activator="{ on, attrs }">
        <v-list-item dense v-bind="attrs" v-on="on" :href="route.to"
          :class="{'deep-purple lighten-1': route.to == route.location}" link>
          <v-list-item-icon>
            <v-icon>{{ route.icon }}</v-icon>
          </v-list-item-icon>

          <v-list-item-content>
            <v-list-item-title v-text="route.title" />
          </v-list-item-content>
        </v-list-item>
      </template>
      <span v-text="route.title" />
    </v-tooltip>
  </v-list>
  <template v-slot:append>
    <v-list dense flat>
      <v-tooltip right>
        <template v-slot:activator="{ on, attrs }">
          <v-list-item class="mb-n1" dense v-bind="attrs" v-on="on" href="/auth/logout" link>
            <v-list-item-icon>
              <v-icon>mdi-logout-variant</v-icon>
            </v-list-item-icon>

            <v-list-item-content>
              <v-list-item-title>Logout</v-list-item-title>
            </v-list-item-content>
          </v-list-item>
        </template>
        <span>Logout</span>
      </v-tooltip>
    </v-list>
  </template>
</v-navigation-drawer>
