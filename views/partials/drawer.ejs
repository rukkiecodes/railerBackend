<v-navigation-drawer v-model="drawer" color="#1E2023" :mini-variant="drawerMiniVariant" app>
  <v-list dense>
    <v-list-item class="ml-n2 mt-n3">
      <v-list-item-avatar size="45">
        <v-img src="/images/logoDark.png"></v-img>
      </v-list-item-avatar>
    </v-list-item>
  </v-list>
  <v-list dense flat>
    <v-tooltip v-for="(route, i) in routes" :key="i" right>
      <template v-slot:activator="{ on, attrs }">
        <v-list-item dense v-bind="attrs" v-on="on" :href="route.to"
          :class="{'deep-purple lighten-1 rounded-lg mx-2 pl-2': route.to == route.location}" link>
          <v-list-item-icon>
            <v-icon>{{ route.icon }}</v-icon>
          </v-list-item-icon>

          <v-list-item-content>
            <v-list-item-title v-text="route.title" />
          </v-list-item-content>
        </v-list-item>
      </template>
      <span v-text="route.title" />
    </v-tooltip>
  </v-list>
  <template v-slot:append>
    <v-list dense flat>
      <v-tooltip right>
        <template v-slot:activator="{ on, attrs }">
          <v-list-item class="pl-lg-1" v-bind="attrs" v-on="on">
            <v-list-item-action>
              <vs-switch color="deep-purple accent-4" v-model="appMode">
                <template #off>
                  <v-icon small>mdi-moon-waxing-crescent mdi-rotate-45</v-icon>
                </template>
                <template #on>
                  <v-icon small>mdi-weather-sunny</v-icon>
                </template>
              </vs-switch>
            </v-list-item-action>

            <v-list-item-content>
              <v-list-item-title>App mode</v-list-item-title>
            </v-list-item-content>
          </v-list-item>
        </template>
        <span>App mode</span>
      </v-tooltip>
      <v-tooltip right>
        <template v-slot:activator="{ on, attrs }">
          <v-list-item class="mb-n1" dense v-bind="attrs" v-on="on" link>
            <v-list-item-icon>
              <v-icon>mdi-syllabary-hiragana</v-icon>
            </v-list-item-icon>
            <v-list-item-content>
              <v-list-item-title>Language</v-list-item-title>
            </v-list-item-content>
          </v-list-item>
        </template>
        <span>Language</span>
      </v-tooltip>
      <v-tooltip right>
        <template v-slot:activator="{ on, attrs }">
          <v-list-item class="mb-n1" dense v-bind="attrs" v-on="on" link>
            <v-list-item-icon>
              <v-icon>mdi-logout-variant</v-icon>
            </v-list-item-icon>

            <v-list-item-content>
              <v-list-item-title>Logout</v-list-item-title>
            </v-list-item-content>
          </v-list-item>
        </template>
        <span>Logout</span>
      </v-tooltip>
    </v-list>
  </template>
</v-navigation-drawer>
</v-navigation-drawer>