<v-navigation-drawer v-model="drawer" color="deep-purple accent-4" app>
  <v-list dense>
    <v-list-item v-for="(route, i) in routes" :key="i" :href="route.to"
      :class="{'deep-purple lighten-1': route.to == route.location}" link>
      <v-list-item-icon>
        <v-icon>{{ route.icon }}</v-icon>
      </v-list-item-icon>
      <v-list-item-title>{{ route.title }}</v-list-item-title>
    </v-list-item>
  </v-list>
</v-navigation-drawer>